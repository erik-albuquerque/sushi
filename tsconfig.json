{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/": ["src/components/*"],
      "@components": ["src/components"],
      "@utils/": ["src/utils/*"],
      "@utils": ["src/utils"],
      "@constants/": ["src/constants/*"],
      "@constants": ["src/constants"],
      "@schemas/": ["src/schemas/*"],
      "@schemas": ["src/schemas"],
      "@lib/": ["src/lib/*"],
      "@lib": ["src/lib"],
      "@types/": ["src/types/*"],
      "@types": ["src/types"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
